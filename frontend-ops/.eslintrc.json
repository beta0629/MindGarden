{
  "extends": ["next/core-web-vitals", "next", "prettier"],
  "rules": {
    "@next/next/no-img-element": "error",
    "react-hooks/exhaustive-deps": "warn",
    "no-restricted-imports": [
      "error",
      {
        "paths": [
          {
            "name": "lodash",
            "message": "Import individual lodash functions instead."
          }
        ]
      }
    ]
  }
}
